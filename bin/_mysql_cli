#!/bin/bash

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )";
ROOT=${DIR}/..;

# environment variables
source ${ROOT}/.env;

mysql_cli()
{
    /bin/bash ${DIR}/_health_check --container_name ${MYSQL_CONTAINER_NAME};

    if [ $? -eq 1 ]; then
        /bin/bash ${DIR}/_whalesay --say "MySQL container (${MYSQL_CONTAINER_NAME}) is not running.";
        exit 1;
    fi;

    docker exec -ti ${MYSQL_CONTAINER_NAME} mysql -uroot -p${MYSQL_ROOT_PASSWORD};
}

mysql_cli;

exit 0;
