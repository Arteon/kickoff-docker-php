#!/bin/bash

if [ "$1" == "dev" ] || [ "$1" == "testing" ] || [ "$1" == "prod" ]
then
    docker stop yourproject_php_apache_engine_$1
    docker stop yourproject_mysql_$1
fi

if [ "$1" == "dev" ]
then
    docker stop yourproject_nginx_proxy_$1
elif [ "$1" == "nginx" ]
then
    docker stop yourproject_nginx_proxy
fi

