#!/bin/bash

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )";
ROOT=${DIR}/..;

# environment variables
source ${ROOT}/.env;

usage()
{
    echo "Usage:";
    echo "./_composer --command [install|update|...]";
    exit 0;
}

missing_arg()
{
    echo "ERROR: Missing argument $1."
    exit 1;
}

composer()
{
    /bin/bash ${DIR}/_health_check --container_name ${APACHE_CONTAINER_NAME};

    if [ $? -eq 1 ]; then
        /bin/bash ${DIR}/_whalesay --say "Apache container (${APACHE_CONTAINER_NAME}) is not running.";
        exit 1;
    fi;

    docker exec --user www-data -ti ${APACHE_CONTAINER_NAME} composer ${CMD};
}

# checking parameters
if [ "$#" -eq 0 ]; then
    usage;
    exit 1;
fi;

while [ "$1" != "" ]; do
    case $1 in
        --command ) shift
            if [ -z "$1" ]; then
                missing_arg --command;
            fi;
            CMD=$1 ;;
    esac
    shift
done;

composer;

exit 0;