#!/bin/bash

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
ROOT=${DIR}/..

stty -echo
printf "MySQL root password: "
read rootpass
stty echo
printf "\n"

databaseName=database_name
containerName=yourproject_mysql_$1

mv ${ROOT}/dumps/${databaseName}.sql ${ROOT}/dumps/${databaseName}.old.sql
docker exec ${containerName} mysqldump --opt -uroot -p${rootpass} ${databaseName} > ${ROOT}/dumps/${databaseName}.sql
